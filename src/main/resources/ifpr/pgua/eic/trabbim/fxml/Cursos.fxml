<GridPane  
      xmlns="http://javafx.com/javafx" 
      xmlns:fx="http://javafx.com/fxml" 
      prefHeight="720" prefWidth="480"
      fx:controller="ifpr.pgua.eic.trabbim.telas.Cursos"
      >

   <padding>
       
       <Insets topRightBottomLeft="8.0"/>

   </padding>

   
     
    <Label text="Nome: " labelFor="$tfNome" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="tfNome"  GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="300"/>

    <Label text="Descricao: " LabelFor="$tfDescricao" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="tfDescricao" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Carga Horaria: " LabelFor="$tfCargaHoraria" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="tfCargaHorario" GridPane.columnIndex="1"  GridPane.rowIndex="3"/> 

    <Label text="Codigo: " LabelFor="$tfCodigo" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="tfCodigo" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Professor: " LabelFor="$Professor" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <ComboBox fx:id="tfProfessor" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    
      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.columnSpan="2" GridPane.rowIndex="6">
         <children>
            <Button onAction="#limpar"   styleClass="botao-limpar" text="Limpar"/>
            <Button onAction="#adicionar" text="Cadastrar" />
         </children>
      </HBox>

</GridPane>